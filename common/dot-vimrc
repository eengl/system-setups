" ---------------------------------------------------------------------------------------- 
" .vimrc - Vim Configuration file.
" ---------------------------------------------------------------------------------------- 

" ---------------------------------------------------------------------------------------- 
" Set colorscheme
" ---------------------------------------------------------------------------------------- 
colorscheme afterglow

" ---------------------------------------------------------------------------------------- 
" Color syntax highlighting
" ---------------------------------------------------------------------------------------- 
syntax on

" ---------------------------------------------------------------------------------------- 
" Show cursor position
" ---------------------------------------------------------------------------------------- 
set ruler

" ---------------------------------------------------------------------------------------- 
" No text wrapping
" ---------------------------------------------------------------------------------------- 
set tw=0

" ---------------------------------------------------------------------------------------- 
" Allow vim to remain on screen after exit
" ---------------------------------------------------------------------------------------- 
set t_ti= t_te=

" ---------------------------------------------------------------------------------------- 
" This unsets the last search pattern register by hitting return
" ---------------------------------------------------------------------------------------- 
nnoremap <CR> :noh<CR><CR>

" ---------------------------------------------------------------------------------------- 
" Set location for swap files
" ---------------------------------------------------------------------------------------- 
set directory=$HOME/.vim/swapfiles//

" ---------------------------------------------------------------------------------------- 
" Remember last position in file
" ---------------------------------------------------------------------------------------- 
if has("autocmd")
  autocmd BufReadPost * if line("'\"") > 0 && line("'\"") <= line("$") | exe "normal! g`\"" | endif
endif

" ---------------------------------------------------------------------------------------- 
" Set spaces width for Tab according to file/language type.
" ---------------------------------------------------------------------------------------- 
autocmd Filetype c setlocal expandtab tabstop=3 shiftwidth=3 softtabstop=3
autocmd Filetype fortran setlocal expandtab tabstop=3 shiftwidth=3 softtabstop=3
autocmd Filetype python setlocal expandtab tabstop=4 shiftwidth=4 softtabstop=4
autocmd Filetype sh setlocal expandtab tabstop=3 shiftwidth=3 softtabstop=3

" ---------------------------------------------------------------------------------------- 
" .vimrc
" ---------------------------------------------------------------------------------------- 
